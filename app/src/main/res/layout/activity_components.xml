<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ComponentsActivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:gravity="center"
      android:text="Components"
      android:textColor="#070707"
      android:textSize="24sp"
      android:textStyle="bold" />

  <Button
      android:id="@+id/radio_buttons_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="24dp"
      android:text="Radio Buttons" />

  <Button
      android:id="@+id/check_boxes_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Check Boxes" />

  <Button
      android:id="@+id/other_components_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="Other components" />

</LinearLayout>